<div class="page">

    <div class="container block-padding pt-0">
        <div class="col-lg-8 offset-lg-2 text-center">
            <h3>Find a new furry Friend</h3>
            <p>Who Saves Who? has a goal of ending pet homelessness for good. We've helped more than 8 million pets find forever homes. That's 1 out of every 10 adoptions in North America. You can be part of the solution by searching for an adoptable pet near you.</p>
        </div>
        <!-- First row: Adopt a pet -->
        <div class="row mt-5">
            <!-- Agency  -->
            {{#each agencyInfo}}
            <div class="adopt-card col-md-6 col-xl-3 res-margin">
                <div class="card bg-light-custom">
                    <div class="thumbnail text-center">
                        <!-- Name -->
                        <div class="caption-adoption">
                            <h6 class="adoption-header">{{this.agencyName}}</h6>
                            <!-- List -->
                            <ul class="list-unstyled">
                                <li>
                                    <strong>Address:</strong> {{this.agencyAddress}}, {{this.agencyCity}}</li>
                                <li>
                                    <strong>Phone: </strong> {{this.agencyPhone}}</li>
                            </ul>
                            <!-- Buttons -->
                            <div class="text-center">
                                <a href="adoption-single.html" class="btn btn-primary">View Pets</a>
                            </div>
                        </div>
                    </div>
                    <!-- /thumbnail -->
                </div>
                <!-- /card -->
            </div>
            <!-- /adopt-card -->
            {{/each}}
            <!-- /pet -->
            <!-- /col-md -->
        </div>
        <!-- /container -->
    </div>